<% if @user.errors.any? %>
  <div>
    <strong>Please correct the following error(s)!</strong>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
  </div>
<% end %>

<div class="container">
  <form method="post" action="/users">
    <div>
      <label>Username: </label>
      <input type="text" class="form-group" name="username" value="<%= @user.username %>">
    </div>
    <div>
      <label>Password: </label>
      <input type="text" class="form-group" name="password" value="<%= @user.password %>">
    </div>
    <div>
      <input type="submit" class="btn btn-default" name="submit">
    </div>
  </form>
</div>