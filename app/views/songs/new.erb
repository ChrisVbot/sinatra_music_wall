


<% if @song.errors.any? %>
  <div>
    <strong>Please correct the following error(s)!</strong>
      <ul>
        <% @song.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
  </div>
<% end %>



<div class="container">
  <form method="post" action="/songs">
    <div>
      <label>Artist: </label>
      <input type="text" class="form-group" name="author" value="<%= @song.author %>">
    </div>
    <div>
      <label>Song title: </label>
      <input type="text" class="form-group" name="title" value="<%= @song.title %>">
    </div>
    <div>
      <label>URL(optional): </label>
      <input type="text" class="form-group" name="url" value="<%= @song.url %>">
    </div>
    <div>
      <input type="submit" class="btn btn-default" name="submit" >
    </div>
  </form>
</div>